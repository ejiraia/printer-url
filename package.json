{
  "name": "printerurl",
  "version": "1.0.0",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "electron-forge start",
    "migrate": "node ./src/database/migrations.js",
    "seeder": "node ./src/database/seeders.js",
    "package": "electron-forge package",
    "make": "electron-forge make"
  },
  "author": "Ejiraia",
  "license": "ISC",
  "description": "Serviço de impressão via url para sistemas POS",
  "devDependencies": {
    "@electron-forge/cli": "^7.8.3",
    "@electron-forge/maker-deb": "^7.8.3",
    "@electron-forge/maker-rpm": "^7.8.3",
    "@electron-forge/maker-squirrel": "^7.8.3",
    "@electron-forge/maker-wix": "^7.8.3",
    "@electron-forge/maker-zip": "^7.8.3",
    "@electron-forge/plugin-auto-unpack-natives": "^7.8.3",
    "@electron-forge/plugin-fuses": "^7.8.3",
    "@electron/fuses": "^1.8.0",
    "electron": "^37.3.0"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "electron-squirrel-startup": "^1.0.1",
    "express": "^5.1.0",
    "selenium-webdriver": "^4.35.0",
    "sqlite3": "^5.1.7"
  },
  "build": {
    "appId": "com.printurl-app.id",
    "productName": "PrinterUrl",
    "icon": "build/icon.ico",
    "win": {
      "target": "nsis"
    },
    "nsis": {
    "oneClick": false,
    "allowToChangeInstallationDirectory": true
  }
  },
  "config": {
    "forge": {
      "packagerConfig": {
        "icon": "build/icon.ico",
        "name": "PrinterUrl"
      },
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "setupIcon": "build/icon.ico",
            "ui": {
              "chooseDirectory": true
            },
            "features": {
              "installFolders": true
            },
            "actions": {
              "createDesktopShortcut": true,
              "createStartMenuShortcut": true
            }
          }
        }
      ]
    }
  }
}
